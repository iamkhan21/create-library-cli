{
  "name": "library-template",
  "version": "1.0.0",
  "description": "Template of library project on typescript and bundling with swc",
  "author": "Ivan Khanevich <ivan.khanevich@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamkhan21/ts-swc-library-template.git"
  },
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "typings": "dist/typings/index.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "prettier --check **/*.* && eslint .",
    "build": "npm-run-all lint clean -p build:*",
    "build:main": "swc src -d dist/main --config-file swc_configs/main/.swcrc",
    "build:module": "swc src -d dist/module --config-file swc_configs/module/.swcrc",
    "build:typings": "tsc --emitDeclarationOnly --outDir dist/typings",
    "format": "run-s format:*",
    "format:prettier": "prettier src/**/*.ts --write",
    "format:lint": "eslint src --ext .ts --fix",
    "doc:dev": "run-s doc:html doc:watch",
    "doc:publish": "run-s doc:html doc:host",
    "doc:watch": "open-cli docs/index.html",
    "doc:html": "typedoc",
    "doc:host": "gh-pages -m \"[ci skip] Updates\" -d docs",
    "prepare": "pnpm build",
    "semantic-release": "semantic-release",
    "test": "jest --coverage && pnpm lint"
  },
  "dependencies": {
    "caniuse-api": "^3.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.39",
    "@swc/core": "^1.2.54",
    "@swc/jest": "^0.1.2",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "2.2.10",
    "rimraf": "^3.0.2",
    "semantic-release": "17.4.2",
    "semantic-release-cli": "5.4.3",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "renovate": {
    "extends": [
      "config:js-lib",
      ":automergePatch",
      ":automergeBranch",
      ":automergePatch",
      ":automergeBranch",
      ":automergeLinters",
      ":automergeTesters",
      ":automergeTypes"
    ]
  }
}
